<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project2.appfront.ch.p3n.apps.appfront.android.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/choose_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_interest" />

    <Spinner
        android:id="@+id/interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/select_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/specify_interest" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
